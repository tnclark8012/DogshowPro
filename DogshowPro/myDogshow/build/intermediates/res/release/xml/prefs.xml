<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android" >

    <PreferenceCategory
        android:summary="Dogshow"
        android:title="Show Day" >
        <EditTextPreference
            android:defaultValue="2.5"
            android:hint="minutes"
            android:inputType="numberDecimal"
            android:key="dev.tnclark8012.dogshow.android.dogshow.prefs.key.JUDGE_TIME"
            android:summary="Estimated minutes to judge one dog"
            android:title="Ring Judging Time" />
        <EditTextPreference
            android:defaultValue="10"
            android:hint="minutes"
            android:inputType="numberDecimal"
            android:key="dev.tnclark8012.dogshow.android.dogshow.prefs.key.GROUP_DEFAULT_TIME"
            android:summary="Estimated minutes to judge one group ring"
            android:title="Group Ring Judging Time" />
        <SwitchPreference
            android:defaultValue="true"
            android:key="dev.tnclark8012.dogshow.android.dogshow.prefs.key.SHOW_GROUPS"
            android:summary="Show group rings"
            android:switchTextOff="Off"
            android:switchTextOn="On"
            android:title="Group Rings" />
    </PreferenceCategory>

</PreferenceScreen><!-- From: file:/C:/Users/Taylor/Documents/GitHub/dogshow/DogshowPro/myDogshow/src/main/res/xml/prefs.xml -->