<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/layout_background"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/dog_view_header"
        android:layout_width="match_parent"
        android:layout_height="@dimen/header_height"
        android:background="@color/header_color" >

        <RelativeLayout
            android:id="@id/dog_view_image"
            android:layout_width="@dimen/header_icon_width"
            android:layout_height="@dimen/header_icon_height"
            android:maxHeight="@dimen/element_section_height_normal"
            android:maxWidth="@dimen/header_icon_width" >

            <View
                android:layout_width="match_parent"
                android:layout_height="4dp"
                android:layout_alignParentBottom="true"
                android:background="@color/accent_1" />
        </RelativeLayout>

        <dev.tnclark8012.apps.android.dogshow.widget.TypefacedTextView
            xmlns:ttv="http://schemas.android.com/apk/res/dev.tnclark8012.apps.android.dogshow"
            android:id="@id/dog_view_name"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_alignBottom="@id/dog_view_image"
            android:layout_marginLeft="@dimen/element_spacing_normal"
            android:layout_toRightOf="@id/dog_view_image"
            android:ems="10"
            android:gravity="center_vertical"
            android:textColor="@color/header_title"
            android:textSize="@dimen/text_large"
            ttv:typeface="Roboto-Medium.ttf" />
    </RelativeLayout>

    <include
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        layout="@layout/accent_bar" />

    <dev.tnclark8012.apps.android.dogshow.widget.TypefacedTextView
        xmlns:ttv="http://schemas.android.com/apk/res/dev.tnclark8012.apps.android.dogshow"
        android:id="@+id/dog_view_section_sex_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:paddingLeft="@dimen/element_padding_normal"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:text="SEX"
        android:textColor="@color/accent_1"
        android:textSize="@dimen/text_small"
        ttv:typeface="Roboto-Bold.ttf" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:background="@drawable/accent_bar" />

    <dev.tnclark8012.apps.android.dogshow.widget.TypefacedTextView
        android:id="@+id/dog_view_section_sex_text"
        android:layout_width="match_parent"
        android:layout_height="@dimen/element_inner_height"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_marginTop="@dimen/element_spacing_normal"
        android:paddingLeft="@dimen/element_padding_normal"
        android:textSize="@dimen/text_medium" />

    <dev.tnclark8012.apps.android.dogshow.widget.TypefacedTextView
        xmlns:ttv="http://schemas.android.com/apk/res/dev.tnclark8012.apps.android.dogshow"
        android:id="@+id/dog_view_section_breed_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:paddingLeft="@dimen/element_padding_normal"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:text="BREED"
        android:textColor="@color/accent_1"
        android:textSize="@dimen/text_small"
        ttv:typeface="Roboto-Bold.ttf" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:background="@drawable/accent_bar" />

    <dev.tnclark8012.apps.android.dogshow.widget.TypefacedTextView
        android:id="@+id/dog_view_section_breed_text"
        android:layout_width="match_parent"
        android:layout_height="@dimen/element_inner_height"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_marginTop="@dimen/element_spacing_normal"
        android:paddingLeft="@dimen/element_padding_normal"
        android:textSize="@dimen/text_medium" />

    <dev.tnclark8012.apps.android.dogshow.widget.TypefacedTextView
        xmlns:ttv="http://schemas.android.com/apk/res/dev.tnclark8012.apps.android.dogshow"
        android:id="@+id/dog_view_section_points_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:paddingLeft="@dimen/element_padding_normal"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:text="POINTS"
        android:textColor="@color/accent_1"
        android:textSize="@dimen/text_small"
        ttv:typeface="Roboto-Bold.ttf" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:background="@drawable/accent_bar" />

    <dev.tnclark8012.apps.android.dogshow.widget.TypefacedTextView
        android:id="@+id/dog_view_section_points_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_marginTop="@dimen/element_spacing_normal"
        android:paddingLeft="@dimen/element_padding_normal"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textSize="@dimen/text_medium" />

    <View
        android:id="@+id/points_bezel"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:background="@drawable/list_divider" />

    <dev.tnclark8012.apps.android.dogshow.widget.TypefacedTextView
        android:id="@+id/dog_view_section_majors_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_marginTop="@dimen/element_spacing_normal"
        android:paddingLeft="@dimen/element_padding_normal"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textSize="@dimen/text_medium" />

</LinearLayout>