<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <dev.tnclark8012.apps.android.dogshow.widget.TypefacedTextView
        android:id="@+id/text_progress_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="@dimen/element_margin_normal"
        android:layout_marginTop="@dimen/element_margin_normal"
        android:gravity="center"
        android:text="Joining team"
        android:textColor="@color/dark_blue"
        android:textSize="@dimen/text_large" />

    <ProgressBar
        android:id="@+id/progressBar1"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_progress_title"
        android:layout_marginLeft="@dimen/element_margin_normal"
        android:layout_marginRight="@dimen/element_margin_normal"
        android:indeterminate="true" />

    <dev.tnclark8012.apps.android.dogshow.widget.TypefacedTextView
        android:id="@+id/text_progress_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/progressBar1"
        android:layout_below="@+id/progressBar1"
        android:gravity="center"
        android:text="Syncing dogs"
        android:textColor="@color/dark_grey"
        android:textSize="@dimen/text_medium" />

</RelativeLayout>