<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/dog_view_header"
        android:layout_width="match_parent"
        android:layout_height="@dimen/header_height"
        android:background="@color/header_color" >

        <RelativeLayout
            android:id="@+id/dog_view_image"
            android:layout_width="@dimen/header_icon_width"
            android:layout_height="fill_parent"
            android:background="@drawable/dog"
            android:maxHeight="@dimen/element_section_height_normal"
            android:maxWidth="@dimen/header_icon_width" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="4dp"
                android:layout_alignParentBottom="true"
                android:background="@color/accent_1" >
            </RelativeLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_toRightOf="@+id/dog_view_image"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            >

            <dev.tnclark8012.dogshow.apps.android.widget.TypefacedTextView
                android:layout_marginTop="@dimen/element_spacing_normal"
                xmlns:ttv="http://schemas.android.com/apk/res/dev.tnclark8012.dogshow.apps.android"
                android:id="@+id/schedule_next"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/element_spacing_normal"
                android:ems="10"
                android:text="Next up: Papillons"
                android:textColor="@color/header_title"
                android:textSize="@dimen/text_large"
                ttv:typeface="Roboto-Medium.ttf" />

            <dev.tnclark8012.dogshow.apps.android.widget.TypefacedTextView
                xmlns:ttv="http://schemas.android.com/apk/res/dev.tnclark8012.dogshow.apps.android"
                android:id="@+id/schedule_ring"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/schedule_next"
                android:layout_marginLeft="@dimen/element_spacing_normal"
                android:ems="10"
                android:text="Ring 2 12:45pm"
                android:layout_marginBottom="@dimen/element_margin_normal"
                android:layout_alignParentBottom="true"
                android:gravity="bottom"
                android:textColor="@color/header_title"
                android:textSize="@dimen/text_medium"
                ttv:typeface="Roboto-Medium.ttf" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_alignParentBottom="true"
            android:background="@color/accent_1" >
        </RelativeLayout>
    </RelativeLayout>

    <ListView
        android:id="@android:id/list"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@color/transparent"
        android:drawSelectorOnTop="false"
        android:fastScrollEnabled="true"
        android:textFilterEnabled="true" >
    </ListView>

</LinearLayout>