<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/layout_background" >

    <RelativeLayout
        android:id="@+id/handler_view_header"
        android:layout_width="match_parent"
        android:layout_height="@dimen/header_height"
        android:background="@color/header_color" >

        <RelativeLayout
            android:id="@+id/handler_view_image"
            android:layout_width="@dimen/header_icon_width"
            android:layout_height="@dimen/header_icon_height"
            android:maxHeight="@dimen/element_section_height_normal"
            android:maxWidth="@dimen/header_icon_width">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="4dp"
                android:layout_alignParentBottom="true"
                android:background="@color/accent_1" >
            </RelativeLayout>

            </RelativeLayout>

        <dev.tnclark8012.dogshow.apps.android.widget.TypefacedTextView
                xmlns:ttv="http://schemas.android.com/apk/res/dev.tnclark8012.dogshow.apps.android"
            android:id="@+id/handler_view_name"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_alignBottom="@+id/handler_view_image"
            android:layout_marginLeft="@dimen/element_spacing_normal"
            android:layout_toRightOf="@+id/handler_view_image"
            android:ems="10"
            android:gravity="center_vertical"
            android:textSize="@dimen/text_large"
            android:textColor="@color/header_title" 
            ttv:typeface="Roboto-Medium.ttf"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_alignParentBottom="true"
            android:background="@color/accent_1" >
        </RelativeLayout>
    </RelativeLayout>

	<ScrollView
	    android:layout_width="match_parent"
	    android:layout_height="fill_parent"
	    android:layout_below="@+id/handler_view_header" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin" >

        <RelativeLayout
            android:id="@+id/handler_view_section_juniors"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <dev.tnclark8012.dogshow.apps.android.widget.TypefacedTextView
                xmlns:ttv="http://schemas.android.com/apk/res/dev.tnclark8012.dogshow.apps.android"
                android:id="@+id/handler_view_section_juniors_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="JUNIORS CLASS"
                android:layout_marginLeft="@dimen/element_spacing_normal"
                android:textColor="@color/accent_1"
                android:textSize="@dimen/text_small"
                ttv:typeface="Roboto-Bold.ttf" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/handler_view_section_juniors_label"
                android:background="@drawable/accent_bar" >
            </RelativeLayout>
        </RelativeLayout>

        <dev.tnclark8012.dogshow.apps.android.widget.TypefacedTextView
            android:textSize="@dimen/text_medium"
            android:id="@+id/handler_view_section_juniors_text"
            android:layout_width="match_parent"
            android:layout_height="@dimen/element_inner_height"
            android:layout_marginLeft="@dimen/element_spacing_normal"
            android:layout_below="@+id/handler_view_section_juniors"
            android:layout_marginTop="@dimen/element_margin_normal"
             />
        
  
    </RelativeLayout>

	</ScrollView>
</RelativeLayout>