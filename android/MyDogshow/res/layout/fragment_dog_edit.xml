<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="@dimen/activity_vertical_margin"
    android:layout_marginLeft="@dimen/activity_horizontal_margin"
    android:layout_marginRight="@dimen/activity_horizontal_margin"
    android:layout_marginTop="@dimen/activity_vertical_margin" >

    <RelativeLayout
        android:id="@+id/dog_edit_header"
        android:layout_width="match_parent"
        android:layout_height="@dimen/element_section_height_normal" >

        <ImageButton
            android:id="@+id/dog_edit_image"
            android:layout_width="@dimen/avatar_width_normal"
            android:layout_height="fill_parent"
            android:maxHeight="@dimen/element_section_height_normal"
            android:maxWidth="@dimen/avatar_width_normal"
            android:src="@drawable/ic_default_handler" />

        <EditText
            android:id="@+id/dog_edit_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/dog_edit_image"
            android:layout_marginLeft="@dimen/element_spacing_normal"
            android:layout_toRightOf="@+id/dog_edit_image"
            android:inputType="textCapWords"
            android:hint="Name"
            android:ems="10" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/dog_edit_section_breed"
        android:layout_width="match_parent"
        android:layout_height="@dimen/element_section_height_normal"
        android:layout_below="@+id/dog_edit_header" >

        <TextView
            android:id="@+id/dog_edit_label_breed"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/element_height_normal"
            android:layout_marginTop="@dimen/element_padding_normal"
            android:layout_marginBottom="@dimen/element_padding_normal"
            android:gravity="bottom"
            android:text="Breed:"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <Spinner
            android:id="@+id/spinner1"
            android:layout_marginLeft="@dimen/element_padding_normal"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/element_height_normal"
            android:layout_toRightOf="@+id/dog_edit_label_breed"
            android:gravity="bottom" />
    </RelativeLayout>
    
    <RelativeLayout
        android:id="@+id/dog_edit_section_owner"
        android:layout_width="match_parent"
        android:layout_height="@dimen/element_section_height_normal"
        android:layout_below="@+id/dog_edit_section_breed" >
        <QuickContactBadge 
            android:id="@+id/dog_edit_owner_contact_badge"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"/>
        </RelativeLayout>

</RelativeLayout>