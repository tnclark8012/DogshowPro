<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/layout_background" >

    <RelativeLayout
        android:id="@+id/dog_edit_header"
        android:layout_width="match_parent"
        android:layout_height="@dimen/header_height"
        android:background="@color/header_color" >

        <RelativeLayout
            android:id="@+id/dog_edit_image_container"
            android:layout_width="@dimen/header_icon_width"
            android:layout_height="@dimen/header_icon_height"
            android:background="@drawable/spinner_default_holo_dark" >

            <RelativeLayout
                android:id="@+id/dog_edit_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                 >
            </RelativeLayout>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="@dimen/header_icon_width"
            android:layout_height="4dp"
            android:layout_alignParentBottom="true"
            android:background="@color/accent_1" >
        </RelativeLayout>

        <dev.tnclark8012.dogshow.apps.android.widget.TypefacedEditText
            xmlns:ttv="http://schemas.android.com/apk/res/dev.tnclark8012.dogshow.apps.android"
            android:id="@+id/dog_edit_name"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_marginLeft="@dimen/element_spacing_normal"
            android:layout_toRightOf="@+id/dog_edit_image_container"
            android:background="@color/header_color"
            android:ems="10"
            android:gravity="center_vertical"
            android:hint="Dog Name"
            android:inputType="textCapWords"
            android:textColor="@color/header_title"
            android:textSize="@dimen/text_large"
            ttv:typeface="Roboto-Medium.ttf" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@drawable/accent_bar" >
        </RelativeLayout>
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/dog_edit_header" >

        <RelativeLayout
            android:id="@+id/dog_edit_contents"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/dog_edit_header"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin" >

            <RelativeLayout
                android:id="@+id/dog_edit_section_sex"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <dev.tnclark8012.dogshow.apps.android.widget.TypefacedTextView
                    xmlns:ttv="http://schemas.android.com/apk/res/dev.tnclark8012.dogshow.apps.android"
                    android:id="@+id/dog_edit_section_sex_label"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/element_spacing_normal"
                    android:text="SEX"
                    android:textColor="@color/accent_1"
                    android:textSize="@dimen/text_small"
                    ttv:typeface="Roboto-Bold.ttf" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/dog_edit_section_sex_label"
                    android:background="@drawable/accent_bar" >
                </RelativeLayout>
            </RelativeLayout>

            <RadioGroup
                android:id="@+id/dog_edit_sex_radio"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/element_spacing_normal"
                android:layout_below="@+id/dog_edit_section_sex"
                android:orientation="horizontal" >

                <RadioButton
                    android:id="@+id/dog_edit_sex_radio_male"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:text="Male" />

                <RadioButton
                    android:id="@+id/dog_edit_sex_radio_female"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Female" />
            </RadioGroup>

            <RelativeLayout
                android:id="@+id/dog_edit_section_breed"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/dog_edit_sex_radio"
                android:layout_marginTop="@dimen/element_padding_normal"  >

                <dev.tnclark8012.dogshow.apps.android.widget.TypefacedTextView
                    xmlns:ttv="http://schemas.android.com/apk/res/dev.tnclark8012.dogshow.apps.android"
                    android:id="@+id/dog_edit_section_breed_label"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/element_spacing_normal"
                    android:text="BREED"
                    android:textColor="@color/accent_1"
                    android:textSize="@dimen/text_small"
                    ttv:typeface="Roboto-Bold.ttf" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/dog_edit_section_breed_label"
                    android:background="@drawable/accent_bar" >
                </RelativeLayout>
            </RelativeLayout>

            <dev.tnclark8012.dogshow.apps.android.widget.TypefacedTextView
                android:id="@+id/dog_edit_section_breed_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/dog_edit_section_breed"
                android:layout_marginBottom="@dimen/element_tv_spinner_margin_bottom_normal"
                android:layout_marginLeft="@dimen/element_padding_normal"
                android:layout_marginTop="@dimen/element_tv_spinner_margin_top_normal"
                android:background="@drawable/spinner_default_holo_light"
                android:clickable="true"
                android:textSize="@dimen/text_medium" />

            <RelativeLayout
                android:id="@+id/dog_edit_section_points"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/dog_edit_section_breed_text"
                android:layout_marginTop="@dimen/element_spacing_normal" >

                <dev.tnclark8012.dogshow.apps.android.widget.TypefacedTextView
                    xmlns:ttv="http://schemas.android.com/apk/res/dev.tnclark8012.dogshow.apps.android"
                    android:id="@+id/dog_edit_section_points_label"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/element_spacing_normal"
                    android:text="POINTS"
                    android:textColor="@color/accent_1"
                    android:textSize="@dimen/text_small"
                    ttv:typeface="Roboto-Bold.ttf" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/dog_edit_section_points_label"
                    android:background="@drawable/accent_bar" >
                </RelativeLayout>
            </RelativeLayout>

            <dev.tnclark8012.dogshow.apps.android.widget.TypefacedEditText
                android:id="@+id/dog_edit_section_points_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/dog_edit_section_points"
                android:layout_marginLeft="@dimen/element_spacing_normal"
                android:layout_marginTop="@dimen/element_margin_normal"
                android:background="@color/layout_background"
                android:hint="points won"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textSize="@dimen/text_medium" />

            <RelativeLayout
                android:id="@+id/points_bezel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/dog_edit_section_points_text"
                android:layout_marginBottom="@dimen/element_spacing_normal"
                android:layout_marginTop="@dimen/element_spacing_normal"
                android:background="@drawable/list_divider" />

            <dev.tnclark8012.dogshow.apps.android.widget.TypefacedEditText
                android:id="@+id/dog_edit_section_majors_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/points_bezel"
                android:layout_marginLeft="@dimen/element_spacing_normal"
                android:background="@color/layout_background"
                android:hint="majors won"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textSize="@dimen/text_medium" />
