<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="dev.tnclark8012.dogshow.apps.android"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="10"
        android:targetSdkVersion="17" />
<permission
        android:name="dev.tnclark8012.dogshow.apps.android.permission.WRITE_DOGSHOW"
        android:protectionLevel="normal"
        android:label="write permission"
         />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.USE_CREDENTIALS" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.PICK_CONTACT" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Theme.Dogshow" >
        <activity
            android:name=".ui.HomeActivity"
            android:label="@string/app_name"
            android:theme="@style/Theme.Dogshow" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.AccountActivity"
            android:configChanges="orientation|keyboardHidden"
            android:theme="@style/Theme.Dogshow" />
        <activity
            android:name=".ui.HandlerActivity"
            android:configChanges="orientation|keyboardHidden"
            android:theme="@style/Theme.Dogshow" >
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <data android:mimeType="vnd.android.cursor.dir/vnd.dogshow.handler" />
            </intent-filter>
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ui.HomeActivity" />
        </activity>
        <activity
            android:name=".ui.ScheduleActivity"
            android:label="@string/app_name"
            android:theme="@style/Theme.Dogshow" >
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <data android:mimeType="vnd.android.cursor.dir/vnd.dogshow.breedring" />
            </intent-filter>
            
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ui.HomeActivity" />
        </activity>
        <activity
            android:name=".ui.BreedSelectActivity"
            android:label="Select Breed"
            android:theme="@style/Theme.Dogshow" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ui.DogActivity" />
        </activity>
        <activity
            android:name=".ui.DogActivity"
            android:label="@string/app_name"
            android:theme="@style/Theme.Dogshow" >
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <data android:mimeType="vnd.android.cursor.item/vnd.dogshow.dog" />
            </intent-filter>
            <intent-filter android:priority="100" >
                <action android:name="android.intent.action.SENDTO" />

                <category android:name="android.intent.category.DEFAULT" />

                <data android:scheme="sms" />
                <data android:scheme="smsto" />
            </intent-filter>
            <intent-filter android:priority="100" >
                <action android:name="android.intent.action.CALL_PRIVILEGED" />

                <category android:name="android.intent.category.DEFAULT" />
				
                <data android:scheme="tel" />
            </intent-filter>

            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ui.HomeActivity" />
        </activity>
        <activity android:name=".ui.DogsActivity"
            android:label="Dog list">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <data android:mimeType="vnd.android.cursor.dir/vnd.dogshow.dog" />
            </intent-filter>
            <meta-data android:name="android.support.PARENT_ACTIVITY"
                android:value=".ui.HomeActivity" />
        </activity>
        <activity android:name=".ui.FindShowActivity"
            android:label="Find Show">
            <meta-data android:name="android.support.PARENT_ACTIVITY"
                android:value=".ui.HomeActivity" />
        </activity>
        <activity android:name=".preferences.PrefsActivity"
            android:label="Settings">
            <meta-data android:name="android.support.PARENT_ACTIVITY"
                android:value=".ui.HomeActivity" />
        </activity>
        
        <provider
            android:name=".provider.DogshowProvider"
            android:authorities="dev.tnclark8012.dogshow.apps.android"
            android:writePermission="dev.tnclark8012.dogshow.apps.android.permission.WRITE_DOGSHOW"
            android:syncable="true"
            android:label="@string/app_name" />
    </application>

</manifest>